<% if logged_in? && current_user.admin? %>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-rsponsive table-striped table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %></td>
        <% if logged_in? %>
          <% if current_user.admin? && !current_user?(user) %>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>

  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <h2 class="text_h2" style="color:red">Ooooop! You're in the wrong place!!!</h2>
  </div>
<% end %>
