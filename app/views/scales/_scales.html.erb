<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <hr>
      <h1>Scales</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Intervals</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @scales.each do |scale| %>
            <tr>
              <td><%= scale.name %></td>
              <td><%= scale.value %></td>
              <!-- <td><%#= link_to 'Show', scale, class: 'btn btn-default' %></td> -->
              <td><%= link_to 'Edit', edit_scale_path(scale), class: 'btn btn-primary' %></td>
              <td><%= link_to 'Destroy', scale, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>

