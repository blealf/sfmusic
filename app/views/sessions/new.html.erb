<% provide(:title, "Log in!") %>
<h2 class="text_h2"> Log in</h2>
<div class="row">
  	<div class="col-md-6 col-md-offset-3">
		<%= bootstrap_form_for(:session, url: login_path) do |f| %>

		  <div class="field">
		    <%#= f.label :email %>
		    <%= f.text_field :email %>
		  </div>

		  <div class="field">
		    <%#= f.label :password %>
		    <%= f.password_field :password %>
		  </div>

		  <div class="field">
		  		<%= f.label :remember_me do %>
		  			<%= f.check_box :remember_me %>
		  			<!-- <span>Remember me on this computer</span> -->
		  		<% end %>
		  </div>

		  <div class="actions">
		    <%= f.submit "Login", class: 'btn btn-primary form-control' %>
		  </div>
		<% end %>
	</div>
</div>
