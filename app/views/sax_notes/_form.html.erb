<div class="container-fluid">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <%= bootstrap_form_for(sax_note) do |f| %>
        <% if sax_note.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(sax_note.errors.count, "error") %> prohibited this sax_note from being saved:</h2>

            <ul>
            <% sax_note.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.text_field :note %> 
          <%= f.text_field :number %>
          <%= f.text_field :drive_image %>
          <%= f.file_field :note_image, as: :file %>
        </div>

        <div class="actions col-sm-offset-4 col-md-8">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
